{% extends '::base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('bundles/monubituser/css/user.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}

        {% for type, messages in app.session.getFlashBag() %}
        {% for key, message in messages %}
        <div class="{{ key }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
        {% endfor %}
        {% endfor %}

        <div id="formpage">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
{% endblock %}